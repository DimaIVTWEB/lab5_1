<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.jfxdevelop.lab5_1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Нажатие клавиш WASD перемещает квадрат по панели"/>

    <Pane fx:id="gamePanel" prefWidth="400" prefHeight="300" style="-fx-background-color: lightgray;">

        <Rectangle fx:id="Square" width="50" height="50" fill="blue"
                   x="175" y="125" />

    </Pane>

</VBox>